<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Anacrusa.Views.Library.Components.ScoreRowView">

    <Border
        Padding="10"
        Margin="5,6"
        StrokeThickness="1"
        Stroke="#2A2A2A"
        BackgroundColor="#1E1E1E">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12"/>
        </Border.StrokeShape>

        <Grid ColumnDefinitions="Auto,*,Auto">

            <!-- ICON -->
            <Label
                Text="ðŸ“„"
                FontSize="22"
                VerticalOptions="Center"/>

            <!-- TEXT -->
            <VerticalStackLayout
                Grid.Column="1"
                Spacing="2">
                <Label
                    Text="{Binding Title}"
                    FontAttributes="Bold"/>
                <Label
                    Text="{Binding Composer}"
                    FontSize="12"
                    TextColor="Gray"/>
                <Label
                    Text="{Binding LastOpenedPage, Source='Last opened page {0}.'}"
                    FontSize="10"/>

            </VerticalStackLayout>

            <!-- META -->
            <VerticalStackLayout
                Grid.Column="2"
                HorizontalOptions="End"
                VerticalOptions="Center">
                <Label
                    Text="{Binding PageCount, StringFormat='{0} pages.'}"
                    FontSize="12"
                    TextColor="Gray"/>
            </VerticalStackLayout>

        </Grid>

    </Border>
</ContentView>
