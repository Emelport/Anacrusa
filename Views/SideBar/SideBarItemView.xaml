<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Anacrusa.Views.SideBar.SideBarItemView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid Padding="6" HeightRequest="35">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <BoxView x:Name="Indicator"
                 Grid.Column="0"
                 BackgroundColor="#2563EB"
                 Margin="0,0,5,0"
                 IsVisible="False"/>

        <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
            <Image>
                <Image.Source  WidthRequest="32" HeightRequest="32">
                    <FontImageSource Glyph="{Binding Glyph}" FontFamily="MaterialIcons" />
                </Image.Source>
            </Image>
            <Label Text="{Binding Text}" VerticalOptions="Center" IsVisible="{Binding IsExpanded}" FontFamily="RobotoVariable"/>
        </HorizontalStackLayout>
    </Grid>
</ContentView>
